<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <% if user_has_posts(@user) %>
        <h2 class="media-heading"><%= @user.name %></h2>
        <% else %>
        <h2 class="media-heading"><%= @user.name %> has not submitted any posts yet.</h2>
        <% end %>
        <small>
            <%= pluralize(@user.posts.count, 'post') %>,
            <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

// #14
<h2>Posts</h2>
<%= render @user.posts %>

<h2>Comments</h2>
<%= render @user.comments %>

<h2>Favorites</h2>
<% @user.favorites.each do |favorite| %>
  <%= content_tag :div, class: 'media', id: "post-#{favorite.id}" do %>
    <div class="media">
      <div class="media-body">
        <small>
         <%= image_tag favorite.post.user.avatar_url(20), class: "gravatar" %> | <%= favorite.post.user.name %>
         Rated: <%= favorite.post.points %>, comments: <%= favorite.post.comments.count %>
         <br /> posted <%= time_ago_in_words(favorite.post.created_at) %> ago
        </small>
      </div>
    </div>
  <% end %>
<% end %>