 <h1>New Ads</h1>
 
 <div class="row">
   <div class="col-md-12">
     <%= form_for @ads do |f| %>
       <div class="form-group">
 # #13
         <%= f.label :title %>
 # #14
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter ad body" %>
       </div>
       <div class="form-group">
         <%= f.label :price %>
         <%= f.text_area :price, class: 'form-control', placeholder: "Enter ad price" %>
       </div>
       <div class="form-group">
 # #15
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>